<tool id="imagenorm" name="Local Normalizaiton (in Docker)">
    <description>Normalize stack of images locally using either gamma or logarithmic normalization</description>
    <requirements>
      <container type="docker">saber:preprocess</container>
    </requirements>
    <command>
      python /app/normalize -m $mode -o $output -i $input1 --gamma $gamma --scale $scale
    </command>
    <inputs>
        <param name="input1" type="data" label="Input image stack"/>
        <param name="gamma" type="float" value="1.0" label="Gamma value"/>
        <param name="mode" type="integer" value="1" label="Mode: Logarithmic (0) or Gamma (1)"/>
 	<param name="scale" type="float" value="1.0" label="Scale"/>
    </inputs>
    <outputs>
        <data name="output" label="image output" format="input" metadata_source="input1"/>
    </outputs>
    <stdio>
        <exit_code range="1:" level="fatal" description="Tool Error"/>
    </stdio>
    <help>
    </help>
</tool>
